{
  "extends": "@sapphire/ts-config",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "composite": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "watchOptions": {
    "watchFile": "dynamicPriorityPolling",
    "watchDirectory": "dynamicPriorityPolling",
    "fallbackPolling": "priorityInterval"
  }
}

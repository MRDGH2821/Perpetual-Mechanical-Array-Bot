{
  "extends": ["eslint-config-airbnb-ts-prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.json", "tsconfig.eslint.json"]
  },
  "ignorePatterns": ["./.pnp.*", "./.yarn"],
  "rules": {
    "no-console": "off",
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [
          "chatInputRun",
          "run",
          "printBanner",
          "registerApplicationCommands",
          "autocompleteRun"
        ]
      }
    ]
  }
}
